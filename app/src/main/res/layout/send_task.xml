<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#D8ECEB"
        >


        <EditText
            android:id="@+id/send_task_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task id"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <RadioGroup
            android:id="@+id/radio_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <RadioButton android:id="@+id/radio_pub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public task"
                android:checked="true"
                />
            <RadioButton android:id="@+id/radio_pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private task"/>

        </RadioGroup>
        <EditText
            android:gravity="center"
            android:id="@+id/password_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:hint="passwrod"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <Button
            android:id="@+id/but_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="share"
            />
        <Button
            android:id="@+id/but_send_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>